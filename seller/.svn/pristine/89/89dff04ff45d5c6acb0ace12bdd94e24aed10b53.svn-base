    applies_to.click(function(event){
        event.stopPropagation();
        CreatSelect($(this),'applies_to',appliesArr);
        $(this).children('span').on('DOMNodeInserted',function(){
            if($(this).text() == 'Qualifying Item'){
                $('#Qualifying-tr').fadeIn(150);
