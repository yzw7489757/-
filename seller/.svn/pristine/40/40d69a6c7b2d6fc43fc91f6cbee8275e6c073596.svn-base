

#buyer-message-detail-wrap{
	margin: 20px;
	border-radius: 4px 4px 0 0;
    border: 1px #ddd solid;
    width: 70%;
}
.buyer-message-detail{
	background: #f3f3f3;
	width: 100%;
	padding:18px;
}

.order-information .order-detail{
	width: 100%;
	padding-left: 140px;
}
.order-information .order-detail .detail{
	width: 100%;
	padding-left: 1.5%;
}
.order-information .order-detail .detail h4{
	margin-top: 0px;
	margin-bottom: 6px;
	font-weight: bold;
}
.order-information .order-detail .detail .order-no{
	margin-bottom: 4px;
}
.order-information .order-detail .detail .from{
	background:#e4e4e4;
	padding: 4px 10px;
	display: inline-block;
	margin-top: 4px;
}
.order-information .order-cover{
	width: 140px;
	margin-left: -100%;
}
.order-information .order-cover img{
	max-width: 100%;
}
.chart-container{
	padding: 14px 18px;
	max-height: 500px;
	overflow-y:scroll;
	border-bottom: 1px solid #ddd;
}
.chart-container::-webkit-scrollbar{width: 4px;height: 6px;}
.chart-container::-webkit-scrollbar-thumb, 
.chart-container::-webkit-scrollbar-thumb:horizontal, 
.chart-container::-webkit-scrollbar-thumb:vertical{background-color: #cac5bc;}
.chart-container::-webkit-scrollbar-track-piece{background-color: rgba(0,0,0,.04);}
.chart-container P{
	margin-bottom: 6px;
	font-size: 14px;
}
.chart-container .name{
	color: #999;
	font-size: 12px;
}
.chart-container .name strong{
	color: #0088cc;
}
.chart-container  .avatar-32 {
    width: 32px;
    height: 32px;
    border-radius: 50%;
}
.chart-container .content{
	font-size: 13px;
	color: #666;
}
.left-buyer-message,.right-buyer-message{
	margin: 20px 0px;
}
.left-buyer-message{
	text-align: left;
}
 .left-buyer-message .message-infornation,
 .right-buyer-message .message-infornation{
 	width: 88%;
 }
.left-buyer-message .message-infornation{
	margin-left: 10px;
}
.right-buyer-message .message-infornation{
	margin-right: 10px;
}
.left-buyer-message .information,.right-buyer-message .information{
	border: 1px solid #ddd;
    padding: 10px;
    border-radius: 6px;
}
.seller-reply{
	width: 96%;
	margin: 20px auto;
}
#editor{
    min-height: 80px;
    background-color: white;
    border-collapse: separate;
    border: 1px solid #ddd;
   	padding: 6px 12px;
    box-sizing: content-box;
    -webkit-box-shadow: rgba(0, 0, 0, 0.0745098) 0px 1px 1px 0px inset;
    box-shadow: rgba(0, 0, 0, 0.0745098) 0px 1px 1px 0px inset;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
    border-bottom-left-radius: 3px;
    border-top-left-radius: 3px;
    outline: none;
    margin-top: -2px;
}
.reply-btn-container{
	margin-top: 20px;
	text-align: right;
}

.reply-btn-container button{
	padding: 0px 12px;
	height: 30px;
}
#buyer-message-detail-wrap .btn-default {
    background: transparent;
    border: none;
    border-right: 1px solid #ddd;
    border-radius: 0px;
    padding: 10px;
    width: 40px;
    text-align: center;
    
}
#buyer-message-detail-wrap .btn-toolbar {
    margin-bottom: 0px; 
    border: 1px solid #ddd;
    margin-left: 0px;
    margin-bottom: -1px;
}
#buyer-message-detail-wrap .btn-info{
    color: #ffffff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    background-color: #49afcd;
    background-image: -moz-linear-gradient(top, #5bc0de, #2f96b4);
    background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#5bc0de), to(#2f96b4));
    background-image: -webkit-linear-gradient(top, #5bc0de, #2f96b4);
    background-image: -o-linear-gradient(top, #5bc0de, #2f96b4);
    background-image: linear-gradient(to bottom, #5bc0de, #2f96b4);
    background-repeat: repeat-x;
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff5bc0de', endColorstr='#ff2f96b4', GradientType=0);
    border-color: #2f96b4 #2f96b4 #1f6377;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
}
#buyer-message-detail-wrap .btn-group{
	margin-left: 0px;
}
.nodata{
	text-align: center;
	padding: 20px;
    color: #999;
}
