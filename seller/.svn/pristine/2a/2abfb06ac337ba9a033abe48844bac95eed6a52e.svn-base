body{
    font-family: verdana,arial,helvetica,sans-serif;
    font-size: 12px;
    color: #000;
}
.content-area {
    margin: 2px 2.5%;
    width: 95%;
}
.content-area .header-orange {
    color: #c60;
    font-weight: bold;
    font-size: 20px;
    font-family: Arial,Helvetica,sans-serif;
}
.content-module {
    margin-top: 15px;
}
.titlebar .float_left span{
    padding: 6px;
    font-size: 13px;
    font-weight: bold;
    vertical-align: middle;
    text-align: left;
    color: #000;
}
.titlebar {
    background: #e6e6e6 url('../img/titlebargrad._V192548835_.gif') repeat-x;
    border-color: #ccc;
}

.titlebar, .titlebar-blue {
    margin: 0;
    width: 100%;
    border-style: solid;
    border-width: 1px;
    height:25px;
}
/* 编辑按钮 */
.secondarySmallButton {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat right -331px;
}

.buttonSmall {
    height: 16px;
    padding-right: 3px;
}
.inner_button {
    text-align: center;
    display: block;
    display: inline-block;
}
.awesomeButton {
    position: relative;
    border: 0;
    padding: 0;
    margin: 0 4px;
    cursor: pointer;
    overflow: visible;
    color: #006;
}
.secondarySmallButton span {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat left -306px;    
}
.buttonSmall span {
    padding: 1px 4px 5px 8px;
    font-size: 10px;
    margin-right: 5px;
}
.marTop4{
    margin-top: 4px;
}
.data-entry {
    background-color: #f4f4f4;
}
.data-entry .label{
    width: 40%;
    font-weight: bold;
    text-align: right;
    vertical-align: top;
    padding: 6px;
    border: 1px solid #dddddd
}
.data-entry .field{
    width: 60%;
    vertical-align: top;
    padding: 6px;
    border: 1px solid #dddddd
}
.tiny-example {
    font-size: 10px;
    color: #666;
}
.tiny {
    font-size: 10px;
}
.pdBottom22{
    padding-bottom: 22px;
}