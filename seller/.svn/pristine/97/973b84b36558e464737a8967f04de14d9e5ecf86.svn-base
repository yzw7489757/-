$(function () { 
    $('#select').change(function () { 
        if($(this).val() == 'all'){
           $('.optionText').text('适用于全部')
         }else if($(this).val() == 'seller'){
            $('.optionText').text('卖家')
         }else if($(this).val() == 'amazon'){
            $('.optionText').text('亚马逊')
         }
     })
 })