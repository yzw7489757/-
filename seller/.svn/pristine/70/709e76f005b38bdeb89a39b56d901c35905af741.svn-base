    // 关闭筛选条件
    var icon_close_filter = $('.a-icon-close-filter');
    icon_close_filter.click(function(){
        if($(this).parents('.mt-filter').find('input[type="text"]').val() == false){
            $(this).parents('.mt-filter').addClass('hide');
