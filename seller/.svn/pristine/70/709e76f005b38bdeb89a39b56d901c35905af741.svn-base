            }

             html += '<li>'+
                            '<a href="edit_product.html?goodsID='+goodsID+'" class="drop_link">'+
                                '编辑'+
                            '</a>'+
                        '</li>';
             html += '<li>'+
                            '<a href="javascript:;" class="drop_link">'+
                                '管理图片'+
