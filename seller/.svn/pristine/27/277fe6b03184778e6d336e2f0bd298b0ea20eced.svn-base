$(function(){
    var same_fover_address = $('.same_fover_address');
    var add_post_address = $('.add_post_address');
    same_fover_address.click(function(){
        if(!$(this).prop('checked')){
            add_post_address.removeClass('hide')        
        }else{
            add_post_address.addClass('hide')
        }
    })
})