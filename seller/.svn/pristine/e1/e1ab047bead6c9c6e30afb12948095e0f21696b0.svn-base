.notification-preferences-container {
    max-width: 960px;
    min-width: 740px;
    margin-left: auto;
    margin-right: auto;
    padding-top: 10px;
}

.bgcolor {
    background: #c60 !important;
}

.font_color_div {
    color: #fff
}

.font_color_p {
    color: #c60
}

.calculation_method {
    border-radius: 50%;
    background: #cccccc;
    width: 20px;
    height: 20px;
    text-align: center;
    display: inline-block;
    margin: 0 auto;
    position: relative;
    left: 50%;
    margin-left: -10px;
    z-index: 20;
}

.calculation_method_container {
    width: 25%
}
.calculation_method_container>p{
    text-align: center;
}
.calculation_block{
    position:relative;
    width: 768px
}

hr {
    position: absolute;
    margin-left: 12.5%;
    top: 10px;
    width: 75%;

}

.marTop30 {
    margin-top: 30px;
}

table{
    width:100%;
    border: 1px solid #e7e7e7;
    border-top-color: #eaeaea;
    border-bottom: none;
    border-spacing: 0;
    
    text-align: left;
  

}
th{
    background-color: #fff;
    box-shadow: 0 1px 0 rgba(255,255,255,.5) inset;
    border-color: #e7e7e7;
    border-bottom: 1px solid #ddd;
  

}
tr:nth-child(even) {
    background-color: #f6f6f6;
}

 tr {
    vertical-align: middle;
    background-color:#fafafa;

}
td.table-title{
        background: linear-gradient(to bottom,#f8f8f8,#eee);
    box-shadow: 0 1px 0 rgba(255,255,255,.5) inset;
    border-color: #e7e7e7;
    border-bottom: 1px solid #ddd;
    
}
.text-bold{
    font-weight:bold;


}
 td, th {
    padding: 7px 14px 6px;
    border-bottom: 1px solid #eaeaea;
      border-right: 1px solid #ddd;
}

.buttonLarge {
    height: 22px;
    padding-right: 6px;
}

.inner_button {
    text-align: center;
    display: block;
    display: inline-block;
}
.secondaryLargeButton {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat right -96px;
}
.primaryLargeButton {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat right -32px;
}
.buttonLarge span {
    padding: 3px 4px 7px 10px;
    font-size: 12px;
    margin-right: 7px;
    padding-top: 2px;
}
.calculation {
    margin-top:35px !important;
    margin-bottom:35px;
}
.secondaryLargeButton span {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat left -64px;
}
.primaryLargeButton span {
    background: transparent url(../img/sc_button_sliding._V192548845_.gif) no-repeat left top;
}
.button_label {
    width: 100%;
    display: block;
}
.Btn{
    display: flex;
    justify-content: center;
}
.pd_20{
    padding-right: 20px;
}
body {
    font-size: 13px;
    line-height: 19px;
    color: #111;
    font-family: Arial,sans-serif;
}
