.popover{
    position:absolute;
    width: 285px;
    background: #fff;
    border: 1px solid #a6a6a6;
    padding: 18px;
    border-radius: 5px;
    z-index: 9999;
    padding-top: 20px;
    display:none;
    font-weight: normal;
}
.transparent{
    background: transparent;
    position:absolute;
}
.popover.top .transparent{
    width: 100%;
    height: 22px;
    bottom: -22px;left: 0;
}
.popover.right .transparent{
    width: 22px;
    left: -22px;top: 0;
}
.popover.bottom .transparent{
    width: 100%;
    height: 22px;
    top: -22px;left: 0;
}
.popover.left .transparent{
    width: 22px;
    right: -22px;top: 0;
}
.popover:after,.popover:before{
    position: absolute;
    display: block;
    width: 0;
    height: 0;
    border-style: solid;
    content: " ";
    border-width: 8px;
}
.popover:before{
    border-color: rgba(166,166,166,0);
}
.popover:after{
    border-color: rgba(255,255,255,0);
}
.popover.right:after,.popover.right:before{
    right:100%;
    top:50%;
    margin-top: -8px;
}
.popover.right:before{
    border-right-color: #a6a6a6;
}
.popover.right:after{
    border-right-color: #fff;
    margin-right: -1px;
}
.popover.left:after,.popover.left:before{
    left:100%;
    top:50%;
    margin-top: -8px;
}
.popover.left:before{
    border-left-color: #a6a6a6;
}
.popover.left:after{
    border-left-color: #fff;
    margin-left: -1px;
}
.popover.top:after,.popover.top:before{
    left:50%;
    margin-left: -8px;
    top: 100%;
}
.popover.top:before{
    border-top-color: #a6a6a6;
}
.popover.top:after{
    border-top-color: #fff;
    margin-top: -1px;
}
.popover.bottom:after,.popover.bottom:before{
    left:50%;
    margin-left: -8px;
    bottom: 100%;
}
.popover.bottom:before{
    border-bottom-color: #a6a6a6;
}
.popover.bottom:after{
    border-bottom-color: #fff;
    margin-bottom: -1px;
}
.showCloseIcon{
    position: absolute;
    top: 0;
    right: 0;
    padding: 1em;
    cursor: pointer;
}
.a-icon-close{
    width: 10px;
    height: 9px;
    background-position: -297px -5px;
    opacity: .64;
    filter: alpha(opacity=64);
}