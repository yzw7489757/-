/* 公共样式 */
.a-alert-inline {
    display: inline-block;
    border: none;
    vertical-align: middle;
    background-color: transparent;
}

.a-alert-inline .a-alert-container {
    padding: 0;
}
.a-alert-inline-error .a-alert-container {
    padding-left: 16px;
    color: #c40000;
}
.a-alert-inline-info .a-alert-container {
    padding-left: 16px;
    color: #767676;
}
.a-alert-inline-error .a-alert-container i,.a-alert-inline-error .a-alert-content{
    line-height: 19px !important;
}
.a-row .a-span12{
    width:100%;
    margin-right: 0;
}
.a-box{
    border-radius:4px;
}
.a-box .a-box-inner{
    border-radius: 4px;
    position: relative;
}
.a-alert-inline .a-icon-alert {
    height: 13px;
    width: 14px;
    position: absolute;
    left: 2px;
    top: 2px;
}
.a-icon-alert {
    background-position: -166px -130px;
    background-size:400px 670px !important;
}
.a-alert-inline-error .a-icon-alert, .a-icon-error.a-icon-small {
    width: 5px;
    background-position: -141px -130px;
}
.a-lert-inline .a-alert-container .a-alert-content {
    margin-bottom: 0;
    text-align: left;
    font-size:12px;
    line-height: 15px;
}
.a-column {
    margin-right: 2%;
}
.a-icon,
.a-link-emphasis:after {
    background-image: url(../img/AmazonUIBaseCSS-sprite.png);
    -webkit-background-size: 400px 900px;
    background-size: 400px 900px;
    background-repeat: no-repeat;
    display: inline-block;
    vertical-align: top;
}