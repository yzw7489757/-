            $('#ryTmpl').html(ryAdd(resData));
            $('.num').text(res.totalRecords);
            $('.totalPages').text(res.totalPages);
            $('input[type="number"]').attr('max',res.totalPages)
        },
        error: function () {
            console.log(decodeURIComponent(res.error))
        }
    })
})