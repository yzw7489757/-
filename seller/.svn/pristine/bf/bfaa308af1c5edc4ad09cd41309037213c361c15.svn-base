                        //业务+是
                        $('.federal_tax_category').show()

                    } else if ($('.a-choose-business').is('.a-button-choose') && $('.a-choose-no').is('.a-button-choose')) {
                        //业务+否
                        $('.beneficiary_type').show()
                    }
                    break;
                case '.a-choose-persinal': //个人
