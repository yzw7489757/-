body {
    font: 13px/1.231 Verdana,arial,helvetica,clean,sans-serif;
}
.ap_cnep_pagelet {
    padding-top: 10px;
    padding-left: 10px;
    border-radius: 5px;
    margin-top: 40px;
    margin-left: 30px;
}
.ap_pagelet_title {
    text-align: left;
    margin-bottom: 4px;
}
.ap_cnep_subtitle {
    margin-bottom: 5px;
}
h2 {
    font-size: 110% !important;
    font-weight: bold;
    color: #E47911;
}
.ap_input_label {
    display: inline-block;
    margin-right: 4px;
    font-weight: bold;
    text-align: right;
    min-width: 180px;
}
.ap_form_table input, .ap_form_table select, .ap_form_table span.in-amzn-btn {
    margin: 5px 2px;
}
span.btn-prim-med {
    padding: 0 0 0 7px !important;
    background-position: left -448px;
    height: 26px;
}
span.in-amzn-btn {
    color: #006!important;
}

span.in-amzn-btn, span.in-amzn-btn-disabled {
    max-width: 280px;
    display: inline-block;
}
span.btn-prim-med span {
    background-position: right -100px;
    height: 26px;
    display: inline-block;
    zoom: 1;
    max-width: 280px;
}
span.btn-prim-med span input {
    padding: 0 9px 0 10px !important;
    margin: 0 0 0 -7px;
    position: relative;
    float: left;
    line-height: 26px;
}
span.in-amzn-btn input {
    color: #006!important;
    cursor: pointer;
}
span.in-amzn-btn input, span.in-amzn-btn-disabled input {
    border: 0;
    margin: 0;
    padding: 0;
    background: 0;
    font-family: arial,sans-serif;
    outline-width: 0;
    outline: 0;
}
.form_alert {
    height: .9em;
    color: #900;
    padding: 3px;
}

.message {
    width: 600px;
    margin-left: auto;
    margin-right: auto;
    
    padding: 10px;
    font-size: 12px;
     background: #ffffdd;
}
.message span {
    background: url(../img/error-sprite.gif) no-repeat 0 0;
    float: left;
    width: 25px;
    height: 25px;
    background-position:0 -75px;
    display: block;
}
.message h6 {
    font-size: 13px;
    margin: 0 0 .25em 35px;
    padding: 0;
}
.message p {
    margin: 0 0 .25em 35px;
    padding: 0;
}

.error {
      margin-top: 10px ;
    margin-bottom:10px;
    color: #A31919;
    border: 1px solid #A31919;
}