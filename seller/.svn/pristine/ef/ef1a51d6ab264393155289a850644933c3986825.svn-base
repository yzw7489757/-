
table{
    width:100%;
    border: 1px solid #e7e7e7;
    border-top-color: #eaeaea;
    border-bottom: none;
    border-spacing: 0;
    margin-top:15px;
    text-align: left;
  

}
th{
    background-color: #fff;
    box-shadow: 0 1px 0 rgba(255,255,255,.5) inset;
    border-color: #e7e7e7;
    border-bottom: 1px solid #ddd;
  

}

 tr {
    
    vertical-align: middle;
    background-color:#f6f6f6;

}
.a-bordered{
      width:100%;
    
}
 td, th {
    padding: 7px 14px 6px;
    border-bottom: 1px solid #eaeaea;
      border-right: 1px solid #ddd;

}

.content-area {

    margin: 2px 2.5%;
    width: 95%;
}
.header-orange {
    color: #c60;
    font-weight: bold;
    font-size: 20px;
    font-family: Arial,Helvetica,sans-serif;
}
.text-bold{
    font-weight: bold
}
td.table-title{
        background: linear-gradient(to bottom,#f8f8f8,#eee);
    box-shadow: 0 1px 0 rgba(255,255,255,.5) inset;
    border-color: #e7e7e7;
    border-bottom: 1px solid #ddd;
    font-weight: bold;

}
td.underBar{
    background-color: #dcdcdc;
}
td:nth-of-type(3){
    text-align: right;
}
td:nth-of-type(4){
    text-align: right;
}
td:nth-of-type(5){
    text-align: right;
}
td:nth-of-type(6){
    text-align: right;
}
input[type=text]{
    width: 68px;
    height: 21px;
}
body {
    font-size: 13px;
    line-height: 19px;
    color: #111;
    font-family: Arial,sans-serif;
}